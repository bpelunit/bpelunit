				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.5</version>
				<configuration>
					<excludes>
						<exclude>org/bpelunit/test/unit/SimpleTest.java</exclude>
						<exclude>org/bpelunit/test/util/TestUtil.java</exclude>
